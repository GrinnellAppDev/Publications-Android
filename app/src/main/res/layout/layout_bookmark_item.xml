<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="196dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardElevation="2dp">


    <RelativeLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bookmarkarticleiv"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bands" />

        <TextView
            android:id="@+id/bookmark_articletitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:maxLines="2"
            android:padding="2dp"
            android:layout_below="@id/bookmarkarticleiv"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bookmark_publication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:alpha=".40"
            android:padding="2dp"
            android:layout_below="@id/bookmark_articletitle"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bookmark_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:alpha=".40"
            android:layout_alignParentBottom="true"
            android:padding="2dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/bookmark_articletitle"
            android:textSize="12sp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
