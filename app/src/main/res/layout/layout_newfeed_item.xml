<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="110dp" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#11ffffff"
        app:cardElevation="1dp">

        <RelativeLayout android:layout_height="match_parent"
            android:layout_width="match_parent">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="280dp">

                <ImageView
                    android:layout_width="15dp"
                    app:srcCompat="@drawable/sandb"
                    android:id="@+id/nf_articlepub"
                    android:layout_alignTop="@+id/nf_author"
                    android:layout_alignLeft="@+id/nf_articletitle"
                    android:layout_alignStart="@+id/nf_articletitle"
                    android:layout_height="15dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nf_author"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/nf_articletitle"
                    android:layout_toRightOf="@+id/nf_articlepub"
                    android:layout_toEndOf="@+id/nf_articlepub"
                    android:layout_marginLeft="3dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nf_date"
                    android:layout_marginRight="14dp"
                    android:layout_marginEnd="14dp"
                    android:textColor="@color/cardview_shadow_start_color"
                    android:textSize="10sp"
                    android:layout_alignBaseline="@+id/nf_author"
                    android:layout_alignBottom="@+id/nf_author"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="24dp"
                    android:id="@+id/nf_articletitle"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="21dp"
                    android:layout_marginStart="21dp"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <ImageView
                android:layout_height="75dp"
                app:srcCompat="@drawable/bands"
                android:id="@+id/nf_articlethumbnail"
                android:layout_width="75dp"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY"
                android:paddingLeft="2dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="8dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>